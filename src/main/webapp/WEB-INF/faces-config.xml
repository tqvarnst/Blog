<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <from-view-id>/new-blog.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{blogManager.addBlog}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>back</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{blogManager.addBlog}</from-action>
   <from-outcome>failure</from-outcome>
   <to-view-id>/new-blog.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/index.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>new-blog</from-outcome>
   <to-view-id>/new-blog.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>view-blog</from-outcome>
   <to-view-id>/view-blog.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/view-blog.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>back</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{blogManager.deleteBlog}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/new-blog-post.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{blogManager.addBlogPost}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/view-blog.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>cancel</from-outcome>
   <to-view-id>/view-blog.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
</faces-config>
